<Window x:Class="RankedVoting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RankedVoting"
        mc:Ignorable="d"
        Title="Raned-Choice Voting" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <StackPanel Orientation="Vertical">
            <Button x:Name="LoadBtn" Content="Load CSV with ballots" HorizontalAlignment="Left" VerticalAlignment="Top"
                    DockPanel.Dock="Top" Click="LoadBtn_Click"/>

            <TextBlock Text="Select columns containing 1st to nth choice" Margin="0,10,0,0"/>
            <ListBox x:Name="ColumnsLB" DockPanel.Dock="Bottom" HorizontalAlignment="Stretch" 
                     SelectionMode="Multiple"/>

            <Button x:Name="ProcessBtn" Content="Process ballots" HorizontalAlignment="Left" VerticalAlignment="Top"
                    DockPanel.Dock="Top" Click="ProcessBtn_Click"/>
        </StackPanel>
    </DockPanel>
</Window>
